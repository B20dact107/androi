<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colornen"
    android:orientation="vertical"
    >
    <TextView
        android:text="Thông tin ca sĩ yêu thích"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_margin="50dp"
        android:textStyle="bold"
        android:textColor="@color/colortext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:id="@+id/fragmentthongtin_img"
        android:src="@drawable/cat2"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên: "
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/fragmentthongtin_namecasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Xuân Giang"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các sản phẩm âm nhạc: "
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/fragmentthongtin_listbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bài hát 1, Bài hát 2, Bài hát 3"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </LinearLayout>

</LinearLayout>